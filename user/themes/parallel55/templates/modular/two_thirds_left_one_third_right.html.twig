<div style="background: #f6f6f6;" class="modular-row col1-3_2-3 {{ page.header.class}} ">
<div class="container">
{{content}}
<div class="grid pure-g-r">
    {% for p in page.children() %}
    {% set image = p.media.images|first %}
        {% if loop.index == 1 %}
            <div  class="block size-2-3 pure-u-2-3">
            {% if image %}
            <div class="cell-image" style="background:url({{ image.url }}) no-repeat center center; height:220px; background-size:cover;"></div> 
            {% endif %}
            <div>
            {{p.content}}
            </div>

            </div>
        {% else %}
            <div  class="block size-1-3 pure-u-1-3">
            {% if image %}
            <div class="cell-image" style="background:url({{ image.url }}) no-repeat center center; height:220px; background-size:cover;"></div> 
            {% endif %}
            <div>
            {{p.content}}
            </div>

            </div>
        {% endif %}
    {% endfor %}
    </div>
    </div>
</div>